@model RMS.Model.viewModes.MenuDTOs
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="container" style="margin-top: 2%;">
    <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
        <div class="card">
            <div class="card-header text-center pt-4">
                <span>
                    <a href="/Menu" style=" float:left;">
                        <i class="fa fa-arrow-left" style="font-size:27px;"></i>
                    </a>
                </span>
                <samp style="font-size: 20px; font-weight: bold; color:black;">Menu Details</samp>
            </div>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label style="font-weight: bold;font-size: 1.3em;">Menu Name</label>   <br />
                @Html.DisplayFor(model => model.MenuName)

                <label style="font-weight: bold;font-size: 1.3em;">Menu Price</label>   <br />
                @Html.DisplayFor(model => model.MenuPrice)

                <label style="font-weight: bold;font-size: 1.3em;">Dish Sub Category</label>   <br />
                @Html.DisplayFor(model => model.SubCategoryID)
            </div>

            </div>


        </div>

    </div>
