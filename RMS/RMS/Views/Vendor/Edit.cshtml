@model RMS.Model.viewModes.VendorDTOs

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.VendorID);
    <div class="form-horizontal">

        <span>
            <a href="/Vendor" style=" float:left;">
                <i class="fa fa-arrow-left" style="font-size:25px;"></i>
            </a>
        </span>
        <span style="font-size: 25px; font-weight: bold; color:black;"><p>Edit Vendor</p></span>
        <hr />


        <div class="form-group">

            <label style="font-weight: bold;font-size: 1.3em;">Vendor</label>   <br />
            @Html.ValidationMessageFor(model => model.VendorName, "", new { @class = "text-danger" })
            @Html.TextBoxFor(x => x.VendorName, "", new { @class = "form-control", @placeholder = "Enter Vendor" })

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">
                <input type="submit" value="Save" class="btn bg-gradient-primary mt-4 " style=" display: block; margin-left: auto; margin-right: auto; width: 40%; " />

            </div>
        </div>
    </div>
}
