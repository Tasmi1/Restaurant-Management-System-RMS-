@model RMS.Model.viewModes.InvoiceDTOs
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<div class="container" style="margin-top: 2%;">
    <div class=" mx-auto">
        <div class="card">
            <div class="card-header text-center pt-4">
                <span>
                    <a href="/Invoice" style=" float:left;">
                        <i class="fa fa-arrow-left" style="font-size:27px;"></i>
                    </a>
                </span>
                <samp style="font-size: 30px; font-weight: bold; color:black;">Creat New Invoice </samp>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="form-group ">
                        <div class="row">
                            <div class="col">
                                <label style="font-weight: bold;font-size: 1.3em;">VAT </label>
                                @Html.ValidationMessageFor(model => model.VAT, "", new { @class = "text-danger" })
                                @Html.TextBoxFor(x => x.VAT, "", new { @class = "form-control", @placeholder = "Enter VAT" })
                            </div>
                            <div class="col">
                                <label style="font-weight: bold;font-size: 1.3em;">Service Tax </label>
                                @Html.ValidationMessageFor(model => model.ServiceTax, "", new { @class = "text-danger" })
                                @Html.TextBoxFor(x => x.ServiceTax, "", new { @class = "form-control", @placeholder = "Enter Service Tax " })
                            </div>
                        </div>
                        <div class="mb-3">
                            <label style="font-weight: bold; font-size: 1.3em;">Total</label>   <br />
                            @Html.ValidationMessageFor(model => model.ITotal, "", new { @class = "text-danger" })
                            @Html.TextBoxFor(x => x.ITotal, "", new { @class = "form-control", @placeholder = "Enter Total" })
                        </div>
                        

                        <div class="mb-3">
                            <label style="font-weight: bold;font-size: 1.3em;">Cart Detail</label>   <br />
                            @Html.ValidationMessageFor(model => model.CartDetailID, "", new { @class = "text-danger" })
                            @Html.DropDownListFor(x => x.CartDetailID, new SelectList(Model.CartDetails, "Id", "Name"), new { @class = "form-control form-control-lg ", required = "required" })

                        </div>
                    </div>
                    <div class="text-center">
                        <input type="submit" value="Create" class="btn bg-gradient-primary mt-4 " style=" display: block; margin-left: auto; margin-right: auto; width: 50%; " />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

