@model RMS.Model.viewModes.InventoryProductDTOs

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.InventoryProductID);

<div class="form-horizontal">

    <span>
        <a href="/InventoryProduct" style=" float:left;">
            <i class="fa fa-arrow-left" style="font-size:25px;"></i>
        </a>
    </span>
    <span style="font-size: 25px; font-weight: bold; color:black;"><p>Edit Inventory Product</p></span>
    <hr />


    <div class="form-group">

        <div class="form-group">
            <label style="font-weight: bold;font-size: 1.3em;">Products Name</label>   <br />
            @Html.ValidationMessageFor(model => model.ProductsName, "", new { @class = "text-danger" })
            @Html.TextBoxFor(x => x.ProductsName, "", new { @class = "form-control", @placeholder = "Enter Products Name" })

        </div>
    </div>

    <div class="form-group">

        <label style="font-weight: bold;font-size: 1.3em;">Manufacture Date</label>   <br />
        @Html.ValidationMessageFor(model => model.ManufactureDate, "", new { @class = "text-danger" })
        @Html.TextBoxFor(x => x.ManufactureDate, "", new { @class = "form-control datepicker" })

    </div>
    <div class="form-group">

        <label style="font-weight: bold;font-size: 1.3em;">Expiry Date</label>   <br />
        @Html.ValidationMessageFor(model => model.ExpDate, "", new { @class = "text-danger" })
        @Html.TextBoxFor(x => x.ExpDate, "", new { @class = "form-control datepicker" })

    </div>
    <div class="form-group">

        <label style="font-weight: bold;font-size: 1.3em;">Description</label>   <br />
        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        @Html.TextBoxFor(x => x.Description, "", new { @class = "form-control", @placeholder = "Enter Description" })

    </div>
    <div class="form-group">
        <label style="font-weight: bold;font-size: 1.3em;"> Category</label>   <br />
        @Html.DropDownListFor(x => x.CategoryID, new SelectList(Model.Categories, "Id", "Name"), new { @class = "form-control form-control-lg", required = "required" })
        @Html.ValidationMessageFor(x => x.CategoryID, "", new { @class = "text-danger" })

    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-12">
            <input type="submit" value="Save" class="btn bg-gradient-primary mt-4 " style=" display: block; margin-left: auto; margin-right: auto; width: 40%; " />

        </div>
    </div>
</div>
}


